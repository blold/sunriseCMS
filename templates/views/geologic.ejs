<% include ../layouts/sub/header%>
<link href="/styles/site/geologic.css" rel="stylesheet">

<div class="banner container">
    <div class="row">
        <div class="col-md-12">
            <a href="#" onclick="window.location.href = '/';">主页</a>
            <i class="fa fa-angle-right"></i>
            <a href="/solutions">解决方案</a>
            <i class="fa fa-angle-right"></i>
            <span>地质环境</span>
        </div>
    </div>
</div> 

<section id="antenae_blc">
    <div class="container">
        <div class="row row-offcanvas row-offcanvas-right">
            <div class="col-12 col-md-9">
                <div class="jumbotron">
                    <h1><%= (geologic && geologic.geologicTitle ) ? geologic.geologicTitle : '地质环境' %></h1>
                    <p>
						<%- (geologic && geologic.geologicDesc ) ? geologic.geologicDesc : '' %>
                    </p>
                </div>
                <div class="radar_blc">
                    <div class="row">
                        <div class="col-12">
                            <h3><%= (geologic && geologic.mainTitle ) ? geologic.mainTitle : '雷达' %></h3>
						</div>
						<% if(geologicSeries && geologicSeries.length > 0 ){ %>
							<% geologicSeries.forEach(function(el){ %>
								<div class="col-md-4 col-xs-12">
									<div class="card wow flipInX">
										<img class="card-img-top" src="/uploads/img/geologic/series/<%= el.solutionImg.filename %>" alt="Card image cap">
										<div class="card-body">
											<h4 class="card-title"><%= el.solutionTitle || '系列名称' %></h4>
											<p class="card-text content_p">
												<%= el.solutionDesc || '系列描述' %>
											</p>
										</div>
										<div class="download_blc">
											<a href="../public/uploads/files/geologic/series/<%= el.solutionFile.filename %>" target="_blank">下载文档</a>
										</div>
									</div>
								</div> 
							<% }) %>
						<% } %>
                    </div>                     
                </div>
            </div>
            <div class="col-6 col-md-3 sidebar-offcanvas" id="sidebar">
                <div class="list-group">
					<% if(geologicOthers.length > 0 && geologicOthers[0].otherFileName ){ %>
						<% geologicOthers.forEach(function(el){%>
							<a href="../public/uploads/files/geologic/other/<%= el.otherFile.filename %>" class="list-group-item hover_blue"><%= el.otherFileName %></a>
						<% }) %>
					<%}%>
                    <!-- <a href="#" class="list-group-item active">最新产品文档_1</a>
                    <a href="#" class="list-group-item">最新产品文档_2</a>
                    <a href="#" class="list-group-item">最新产品文档_3</a> -->
                </div>
            </div>
        </div>
    </div>
</section>
  
<% include ../layouts/sub/footer%>
