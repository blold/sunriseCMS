<% include ../layouts/sub/header %>
<link href="/styles/site/cases.css" rel="stylesheet">


<div class="banner container">
    <div class="row">
        <div class="col-md-12">
            <a href=".">主页</a>
            <i class="fa fa-angle-right"></i>
            <span>方案展示</span>
        </div>
    </div>
</div>    

<section class="cases_blc">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
			<% if(cases && cases.img1.filename){ %>
				<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
			<% } %>
			<% if (cases && cases.img2.filename){ %>
				<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
			<% } %>
			<% if (cases && cases.img3.filename){ %>
				<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
			<% } %>
			<% if (cases && cases.img4.filename){ %>
				<li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
			<% } %>
			<% if (cases && cases.img5.filename){ %>
				<li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
			<% } %>

        </ol>
        <div class="carousel-inner">
			<% if(cases && cases.img1.filename){ %>
				<div class="carousel-item active">
					<div class="car_banner_title1">
						<!-- <h1>ROADS TO BETTER FUTURE</h1>
						<button type="button" class="btn btn-raised btn-primary">了解更多</button>    -->
					</div>
					<img class="d-block carous_blc" src="/uploads/img/cases/<%= cases.img1.filename %>" alt="First slide">
				</div>
			<%} %>
			<% if(cases && cases.img2.filename){ %>
				<div class="carousel-item">
					<div class="car_banner_title1">
						<!-- <h1>ROADS TO BETTER FUTURE</h1>
						<button type="button" class="btn btn-raised btn-primary">了解更多</button>    -->
					</div>
					<img class="d-block carous_blc" src="/uploads/img/cases/<%= cases.img2.filename %>" alt="Second slide">
				</div>
			<%} %>
			<% if(cases && cases.img3.filename){ %>
				<div class="carousel-item active">
					<div class="car_banner_title1">
						<!-- <h1>ROADS TO BETTER FUTURE</h1>
						<button type="button" class="btn btn-raised btn-primary">了解更多</button>    -->
					</div>
					<img class="d-block carous_blc" src="/uploads/img/cases/<%= cases.img3.filename %>" alt="Third slide">
				</div>
			<%} %>
			<% if(cases && cases.img4.filename){ %>
				<div class="carousel-item active">
					<div class="car_banner_title1">
						<!-- <h1>ROADS TO BETTER FUTURE</h1>
						<button type="button" class="btn btn-raised btn-primary">了解更多</button>    -->
					</div>
					<img class="d-block carous_blc" src="/uploads/img/cases/<%= cases.img4.filename %>" alt="Forth slide">
				</div>
			<%} %>
			<% if(cases && cases.img5.filename){ %>
				<div class="carousel-item active">
					<div class="car_banner_title1">
						<!-- <h1>ROADS TO BETTER FUTURE</h1>
						<button type="button" class="btn btn-raised btn-primary">了解更多</button>    -->
					</div>
					<img class="d-block carous_blc" src="/uploads/img/cases/<%= cases.img5.filename %>" alt="Fifth slide">
				</div>
			<%} %>

        </div>
        <a class="carousel-control-prev" data-target="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" data-target="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="container mainBlc">
        <div class="row">
			<% if(casesSeries && casesSeries.length > 0){ %>
				<% casesSeries.forEach(function(el) {%>
					<div class="col-md-4 col-sm-6 col-xs-12 cases_out_blc wow zoomIn">
						<div class="case_blc bordEffe  hover_div">
							<a href="#" class="case_click">
								<div class="top_img_blc">
									<div class="topImg_click_blc">
										<img src="/uploads/img/cases/series/<%= el.casesImg.filename %>" alt="">
									</div>
								</div>
								<div class="case_content">
									<div class="content_title_blc">
										<h4 class="case_title"><%= el.casesTitle%></h4>
										<span><%= el.casesSubTitle %></span>
									</div>
									<div class="cases_desc">
										<div><%= el.casesBref %></div>
										<div class="more_detail" style="display: none">
											<span style="font-weight: bold">方案</span>：<%= el.casesMoreContent %>
										</div>      
									</div>
								</div>
							</a>
						</div>
					</div>
				<%})%>
			<%} %>
        </div>
    </div>
</section>

<!-- Modal -->
